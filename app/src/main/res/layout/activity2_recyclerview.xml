<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:id="@+id/tvCaptionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lines="1"
                android:padding="1dp"
                android:text="Caption" />

            <TextView
                android:id="@+id/tvLeagueName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lines="1"
                android:padding="1dp"
                android:text="League" />

            <TextView
                android:id="@+id/tvYearName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lines="1"
                android:padding="1dp"
                android:text="Year" />

            <TextView
                android:id="@+id/tvCurrentMatchdayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lines="1"
                android:padding="1dp"
                android:text="Current Matchday" />

            <TextView
                android:id="@+id/tvNumberOfMatchdaysName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lines="1"
                android:padding="1dp"
                android:text="Number Of Matchdays" />

            <TextView
                android:id="@+id/tvNumberOfTeamsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lines="1"
                android:padding="1dp"
                android:text="Number Of Teams" />

            <TextView
                android:id="@+id/tvNumberOfGamesName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lines="1"
                android:padding="1dp"
                android:text="Number Of Games" />

            <TextView
                android:id="@+id/tvLastUpdatedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:lines="1"
                android:padding="1dp"
                android:text="Last Updated" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:id="@+id/tvCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:padding="1dp"
                android:text="name" />

            <TextView
                android:id="@+id/tvLeague"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:padding="1dp"
                android:text="name" />

            <TextView
                android:id="@+id/tvYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:padding="1dp"
                android:text="name" />

            <TextView
                android:id="@+id/tvCurrentMatchday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:padding="1dp"
                android:text="name" />

            <TextView
                android:id="@+id/tvNumberOfMatchdays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:padding="1dp"
                android:text="name" />

            <TextView
                android:id="@+id/tvNumberOfTeams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:padding="1dp"
                android:text="name" />

            <TextView
                android:id="@+id/tvNumberOfGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:padding="1dp"
                android:text="name" />

            <TextView
                android:id="@+id/tvLastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:padding="1dp"
                android:text="name" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary" />
</LinearLayout>